<% include partials/header %>

  </header>
  <main>
    <thead>

    </thead>
    <div class="container">


    <div id="test-list">
      <input type="text" class="fuzzy-search" placeholder="Search by Genre" />
      <ul class="list">
        <%  let count = 0; %>
          <% data.forEach((book) => { %>
            <%  if(book.book_id != count) { %>
              <%  count = book.book_id %>
                <li>
                  <p class="name " hidden>
                    <%=book.genre%>
                  </p>
                  <div class="row">
                    <div class="col s12 m7">
                      <div class="card">
                        <div class="card-image">

                          <a href="/books/<%= book.book_id %>">
                            <img src='<%=book.cover_url %>' />
                        </div>
                        <div class="card-content">
                          <h5 class="blue-text text-darken-2"><%=book.genre%></h5>
                          <p class="blue-text text-darken-2">
                            <%=book.description %>
                          </p>
                        </div>
                        <div class="card-action">
                          </a>
                          <h5>Authors</h5>
                          <%data.forEach((author)=> {%>
                            <%if (author.book_id === book.book_id) { %>
                              <ul>
                                <li class="blue-text text-darken-2">
                                  <a href="/authors/<%=author.author_id%>">
                                    <%= author.author_name%>
                                  </a>
                                </li>
                              </ul>
                              <%}%>
                                <% })%>
                                  <a href="/edit-books/<%=book.book_id%>"><button type="button" name="edit">Edit</button></a>
                                  <button class='deleteBooks' type="button" id='<%= book.book_id%>'>Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
                <%}%>
                  <% }); %>
      </ul>
    </div>
    </div>
  </main>

  <script type="text/javascript" src="/../public/materialize/js/materialize.min.js"></script>
  <script src="/js/bookSearch.js" type="text/javascript"></script>

  </body>
<% include partials/footer %>
